# -----------------------------------------------------------------------------
# Docker Production Environment Configuration
# -----------------------------------------------------------------------------

# Node Environment
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/postgres

# Supabase Configuration
# In production, replace these with your actual Supabase credentials
NEXT_PUBLIC_SUPABASE_URL=your_production_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_role_key

# Application Configuration
# In production, use your actual domain
NEXTAUTH_URL=https://your-production-domain.com
NEXTAUTH_SECRET=your_production_secret_key

# Production-specific settings
NEXT_PUBLIC_API_URL=https://your-production-domain.com/api
NEXT_PUBLIC_ASSET_PREFIX=https://your-cdn-domain.com
NEXT_PUBLIC_APP_ENV=production

# Security Settings
SECURE_COOKIES=true
HSTS_MAX_AGE=63072000
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://analytics.example.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://cdn.example.com; font-src 'self' data:; connect-src 'self' https://api.example.com;"

# Performance Settings
COMPRESSION_LEVEL=1
CACHE_CONTROL_HEADER="public, max-age=31536000, immutable" 