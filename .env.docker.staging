# -----------------------------------------------------------------------------
# Docker Staging Environment Configuration
# -----------------------------------------------------------------------------

# Node Environment
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/postgres

# Supabase Configuration
# In staging, replace these with your staging Supabase credentials
NEXT_PUBLIC_SUPABASE_URL=your_staging_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_staging_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_staging_supabase_service_role_key

# Application Configuration
# In staging, use your staging domain
NEXTAUTH_URL=https://staging.your-domain.com
NEXTAUTH_SECRET=your_staging_secret_key

# Staging-specific settings
NEXT_PUBLIC_API_URL=https://staging.your-domain.com/api
NEXT_PUBLIC_ASSET_PREFIX=https://staging-cdn.your-domain.com
NEXT_PUBLIC_APP_ENV=staging

# Debug Settings (enabled in staging for troubleshooting)
DEBUG=true
LOG_LEVEL=info

# Security Settings (similar to production but may be slightly relaxed for testing)
SECURE_COOKIES=true
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://analytics.example.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://cdn.example.com; font-src 'self' data:; connect-src 'self' https://api.example.com;" 